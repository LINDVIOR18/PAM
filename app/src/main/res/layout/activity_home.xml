<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    nas<android.support.constraint.ConstraintLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/homeurgentbutton"
                android:layout_width="250dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:layout_height="75dp"
                android:layout_marginTop="90dp"
                android:background="@mipmap/homeurgent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="50dp"
                android:paddingBottom="15dp"
                android:text="@string/full_name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeurgentbutton"/>

        <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/inputborder"
                android:ems="10"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:hint="@string/your_full_name"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewName" tools:ignore="RtlSymmetry"
                android:importantForAutofill="no"/>

        <TextView
                android:id="@+id/textDeasease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="50dp"
                android:paddingBottom="15dp"
                android:text="@string/desease"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.578"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextName"/>

        <EditText
                android:id="@+id/editDesease"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/inputborder"
                android:ems="10"
                android:hint="@string/what_is_your_illness"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDeasease"
                tools:ignore="RtlSymmetry"
                android:importantForAutofill="no"/>

        <TextView
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="50dp"
                android:paddingBottom="15dp"
                android:text="@string/location"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.578"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editDesease"/>

        <EditText
                android:id="@+id/editYourLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/inputborder"
                android:ems="10"
                android:hint="@string/where_your_location"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textLocation"
                tools:ignore="RtlSymmetry"
                android:importantForAutofill="no"/>

        <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="50dp"
                android:paddingBottom="15dp"
                android:text="@string/description_optional"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.578"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editYourLocation"/>

        <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/inputborder"
                android:ems="10"
                android:hint="@string/describe_here"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDescription"
                android:importantForAutofill="no"
                tools:ignore="RtlSymmetry"/>

        <Button
                android:id="@+id/homerequest"
                android:layout_width="290dp"
                android:layout_height="140dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="50dp"
                android:background="@mipmap/homerequest"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:onClick="addConsultation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editDescription"/>
        <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:labelVisibilityMode="labeled"
                app:background="@android:color/white"
                app:itemBackground="@mipmap/homemenuboxshadow"
                app:itemIconTint="@drawable/bottom_navigation_item_colors"
                app:itemTextColor="@drawable/bottom_navigation_item_colors"
                app:menu="@menu/bottom_nav_menu"
                android:layout_gravity="end"
                tools:layout_editor_absoluteY="590dp"
                app:layout_constraintTop_toBottomOf="@+id/homerequest"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>